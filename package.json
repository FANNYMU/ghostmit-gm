{
  "name": "ghostmit",
  "version": "1.0.0",
  "description": "Generate smart Git commit messages automatically.",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/index.js",
    "dev": "npx ts-node src/index.ts",
    "build": "npx tsc --outDir dist",
    "build:linux": "npx pkg . --targets node18-linux-x64 --output build/linux/gm",
    "build:windows": "npx pkg . --targets node18-win-x64 --output build/windows/gm.exe",
    "build:macos": "npx pkg . --targets node18-macos-x64 --output build/macos/gm"
  },
  "keywords": [
    "git",
    "github",
    "automation"
  ],
  "author": "FANNYMU",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "child_process": "^1.0.2",
    "dotenv": "^17.0.1",
    "groq-sdk": "^0.26.0",
    "readline": "^1.3.0",
    "simple-git": "^3.28.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.10"
  },
  "pkg": {
    "scripts": [
      "dist/**/*"
    ],
    "assets": [
      ".env.example"
    ]
  }
}
